<p id="notice"><%= notice %></p>

<p>
  <strong>Short link:</strong>
  <%= link_to (root_url+@link.short_link), "/#{@link.short_link}", target: "_blank" %>
</p>

<p>
  <strong>Original link:</strong>
  <%= link_to @link.original_link, @link.original_link, target: "_blank" %>
</p>

<p>
  <strong>Link hits:</strong>
  <%= @link_hits.count %>
</p>

<h3>Accessed from following IP addresses</h3>
<% @link_hits.each do |link_hit| %>
  <%= link_hit.ip_address %> - <%= time_ago_in_words(link_hit.created_at) %> ago <br />
<% end %>